<!DOCTYPE html><!--[if lte IE 8 ]><html class="lte-ie8" lang="en"><![endif]--><!--[if IE 9 ]><html class="ie9" lang="en">
<![endif]--><!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en"><!--<![endif]-->
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1,shrink-to-fit=no,viewport-fit=cover"/>
  <title>{{ site.title }}</title>
  <!--suppress HtmlUnknownTarget -->
  <link href="/css/style.css" rel="stylesheet">
  <meta name="author" content="{{ site.authorName }}">
  <meta name="description" content="{{ site.description }}">
  <link rel="icon" href="{{ site.favicon }}" type="image/svg+xml"/>
</head>
<body>
  
  {% macro navlink(text, url, current=false) %}
    {% set currentAttribute = "aria-current=page" %}
    <a href="{{ url }}" {{ currentAttribute if current }}>{{ text }}</a>
  {% endmacro %}
  
  <!-- ————————————————————————————————————————————————————————————————————— -->
  <!-- Site/Page Navigation 																								                         -->
  <!-- ————————————————————————————————————————————————————————————————————— -->
  <nav>
    <input type="checkbox" name="mobile-navigation-control" id="mobile-navigation-control">
    <label for="mobile-navigation-control" id="mobile-navigation-control-label">
      <span class="mobile-navigation-control-label-text" id="mobile-navigation-control-label-text">Menu</span>
    </label>
    <ul>
      {% for navListItem in navLinks %}
        <li>{{ navlink(navListItem.text,navListItem.url,navListItem.current) }}</li>
      {% endfor %}
    </ul>
  </nav>

  <!-- ————————————————————————————————————————————————————————————————————— -->
  <!-- Site/Page Header 																										                           -->
  <!-- ————————————————————————————————————————————————————————————————————— -->
  <header>
    <hgroup>
      <h1>
        {{ site.title }}
        <small>{{ title }}</small>
      </h1>
    </hgroup>
  </header>

  <!-- ————————————————————————————————————————————————————————————————————— -->
  <!-- Main Page Content  																									                          -->
  <!-- ————————————————————————————————————————————————————————————————————— -->
  <main>
    {{ content | safe }}
  </main>

  <!-- ————————————————————————————————————————————————————————————————————— -->
  <!-- Site/Page Footer 																										                           -->
  <!-- ————————————————————————————————————————————————————————————————————— -->
  <footer>
    <p>Copyright &copy; 2022. All Rights Reserved.</p>
  </footer>

  <!-- ===================================================================== -->
  <!-- Javascript	 																								 					                            -->
  <!-- ===================================================================== -->
  <script src="/js/main.js"></script>
</body>
</html>
